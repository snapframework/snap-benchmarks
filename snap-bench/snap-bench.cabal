Name:                snap-bench
Version:             0.1
Synopsis:            Snap Project Template
License:             AllRightsReserved
Author:              Snap Init
Stability:           Experimental
Category:            Web
Build-type:          Simple
Cabal-version:       >=1.2

Executable pong-server
  hs-source-dirs: src
  main-is: pong.hs

  Build-depends:
    base >= 4,
    transformers,
    mtl,
    bytestring,
    snap-core,
    snap-server,
    filepath

  ghc-options: -O2 -Wall -fwarn-tabs -funbox-strict-fields -threaded -fno-warn-unused-imports -rtsopts

  Extensions: OverloadedStrings

Executable file-server
  hs-source-dirs: src
  main-is: file.hs

  Build-depends:
    base >= 4,
    transformers,
    mtl,
    bytestring,
    snap-core,
    snap-server,
    filepath

  ghc-options: -O2 -Wall -fwarn-tabs -funbox-strict-fields -threaded -fno-warn-unused-imports -rtsopts

  Extensions: OverloadedStrings

Executable table-server
  hs-source-dirs: src
  main-is: table.hs

  Build-depends:
    base >= 4,
    blaze-builder,
    transformers,
    mtl,
    bytestring,
    snap-core,
    snap-server,
    filepath

  ghc-options: -O2 -Wall -fwarn-tabs -funbox-strict-fields -threaded -fno-warn-unused-imports -rtsopts

  Extensions: OverloadedStrings
